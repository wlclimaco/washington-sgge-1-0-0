	<include file="..\..\AntConfig\Sensus-ant-common-targets.xml" optional="false" />

	<target name="build">

		<antcall target="Sensus.cleanFindBugs" />

		<antcall target="Sensus.findBugs">
			<param name="moduleName" value="sensus-lc-implementation" />

			<param name="pomFile" value="../../sensus-lc-interface/pom.xml" />

			<param name="sourcePath" value="../../sensus-lc-interface/src/main/java" />
			<param name="classPath" value="../../sensus-lc-interface/dist" />

		</antcall>

		<antcall target="Sensus.findBugs">
			<param name="moduleName" value="sensus-lc-web" />
			<param name="pomFile" value="../../sensus-lc-web/pom.xml" />

			<param name="sourcePath" value="../../sensus-lc-web/src/main/java" />
			<param name="classPath" value="../../sensus-lc-web/dist" />

		</antcall>


	</target>

</project>
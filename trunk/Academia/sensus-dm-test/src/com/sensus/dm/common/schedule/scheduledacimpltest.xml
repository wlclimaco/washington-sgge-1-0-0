<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="SensusAppContext" class="com.sensus.common.util.SensusAppContext"/>

	<bean id="scheduleDACTarget" class="com.sensus.dm.common.schedule.dac.mybatis.ScheduleDACImpl">
		<property name="sqlSessionFactory" ref="schedule-sqlSessionFactory" />
		<property name="actionDAC" ref="actionDACMockTarget"/>
		<property name="processDAC" ref="processDACMockTarget"/>
	</bean>

	<bean id="scheduleDACImplTarget" class="com.sensus.dm.common.schedule.dac.ScheduleDACImplTest" />

	<!-- Setup for mybatis Database Layer SCHEDULE -->
	<bean id="schedule-sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="configLocation"
			value="classpath:com/sensus/dm/common/schedule/dac/mybatis/map/dm-common-schedule-mybatis-config.xml" />
		<property name="dataSource" ref="epmDataSource" />
	</bean>

	<!-- Setup for mybatis Database Layer ACTION -->
	<bean id="action-sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="configLocation"
			value="classpath:com/sensus/dm/elec/action/dac/mybatis/map/dm-action-mybatis-config.xml" />
		<property name="dataSource" ref="epmDataSource" />
	</bean>

	<!-- Setup for mybatis Database Layer PROCESS -->
	<bean id="process-sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="configLocation"
			value="classpath:com/sensus/dm/common/process/dac/mybatis/map/dm-common-process-mybatis-config.xml" />
		<property name="dataSource" ref="epmDataSource" />
	</bean>


</beans>


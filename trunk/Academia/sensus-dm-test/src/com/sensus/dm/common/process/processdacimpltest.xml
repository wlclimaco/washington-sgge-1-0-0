<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<import resource="classpath*:com/sensus/dm/elec/action/actiondacimpltest.xml" />

	<bean id="SensusAppContext" class="com.sensus.common.util.SensusAppContext" />

	<bean id="processDACTarget" class="com.sensus.dm.common.process.dac.mybatis.ProcessDACImpl">
		<property name="sqlSessionFactory" ref="process-sqlSessionFactory" />
	</bean>

	<bean id="processDACImplTarget" class="com.sensus.dm.common.process.dac.ProcessDACImplTest" />

	<!-- SqlMap setup for iBATIS Database Layer PROCESS -->
	<bean id="process-sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="configLocation"	value="classpath:com/sensus/dm/common/process/dac/mybatis/map/dm-common-process-mybatis-config.xml" />
		<property name="dataSource" ref="epmDataSource" />
	</bean>

</beans>

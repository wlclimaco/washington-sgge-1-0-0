<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:mockito="http://www.mockito.org/spring/mockito"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
					    http://www.mockito.org/spring/mockito http://www.mockito.org/spring/mockito.xsd">

	<bean id="QATAppContext" class="com.qat.framework.util.QATAppContext"/>

	<bean id="recipientBAI" class="com.prosperitasglobal.sendsolv.bai.impl.RecipientBAIImpl">
 		 <property name="recipientBAC" ref="recipientBACTarget"/>
		 <property name="recipientValidationController" ref="recipientValidationController"/>
		 <property name="recipientPagedInquiryRequestValidationController" ref="recipientPagedInquiryRequestValidationController"/>
	</bean>

	<bean id="recipientBACTarget" class="org.mockito.Mockito" factory-method="mock">
		<constructor-arg value="com.prosperitasglobal.sendsolv.bac.IRecipientBAC"/>
	</bean>
</beans>

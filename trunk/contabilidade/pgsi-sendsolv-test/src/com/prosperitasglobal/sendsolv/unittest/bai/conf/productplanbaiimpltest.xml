<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:mockito="http://www.mockito.org/spring/mockito"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
					    http://www.mockito.org/spring/mockito http://www.mockito.org/spring/mockito.xsd">

	<bean id="QATAppContext" class="com.qat.framework.util.QATAppContext"/>

 	 <bean id="productPlanBAI" class="com.prosperitasglobal.sendsolv.bai.impl.ProductPlanBAIImpl">
 		<property name="productPlanBAC" ref="productPlanBACTarget"/>
 		<property name="businessProductPlanValidationController" ref="businessProductPlanValidationController"/>
 		<property name="templateProductPlanValidationController" ref="templateProductPlanValidationController"/>
 		<property name="businessProductPlanInquiryRequestValidationController" ref="businessProductPlanInquiryRequestValidationController"/>
 		<property name="templateProductPlanInquiryRequestValidationController" ref="templateProductPlanInquiryRequestValidationController"/>
 	</bean>

	<bean id="productPlanBACTarget" class="org.mockito.Mockito" factory-method="mock">
		<constructor-arg value="com.prosperitasglobal.sendsolv.bac.IProductPlanBAC"/>
	</bean>
</beans>
<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="NotaFiscalMap">

	<!-- <cache type="org.mybatis.caches.ehcache.LoggingEhcache"/>
	<cache type="org.mybatis.caches.ehcache.EhcacheCache"/>  -->

  	<!-- Result maps describe the mapping between the columns returned
       from a query, and the class properties.  A result map isn't
       necessary if the columns (or aliases) match to the properties
       exactly. -->

  <resultMap id="notaFiscalResult" type="NotaFiscal" >
		<result property="id" column="id" />
		<result property="notaType" column="notaType" />
		<result property="serie" column="serie" />
		<result property="ordem" column="ordem" />
		<result property="numero" column="numero" />
		<result property="tipo" column="tipo" />
		<result property="nfValor" column="nfValor" />
		<result property="dataEmissao" column="dataEmissao" />
		<result property="dataSaida" column="dataSaida" />
		<result property="dataEntrada" column="dataEntrada" />
		<result property="modelo" column="modelo" />
		<result property="bxEstoque" column="bxEstoque" />
		<result property="descItens" column="descItens" />
		<result property="pcCusto" column="pcCusto" />
		<result property="createUser" column="create_user"/>
		<result property="createDateUTC" column="create_date"/>
		<result property="modifyUser" column="modify_user"/>
		<result property="modifyDateUTC" column="modify_date"/>
		<association property="cfop"    column="cfop" select="CfopMap.fetchCfopById"  />
		<association property="transportador"    column="transportador" select="TransportadorMap.fetchTransportadorByNota"  />
		<association property="conhecimentoTransporte"    column="conhecimentoTransporte" select="ConhecimentoTransporteMap.fetchAllConhecimentoTransportesByNotaFiscalId"  />
		<association property="empresa"    column="empresa" select="EmpresaMap.fetchEmpresaByNota"  />
		<collection property="tributosList" column="id" select="TributosMap.fetchTributosByNota"/>
		<collection property="formaPagList" column="id" select="FormaPgMap.fetchAllFormaPgByNota"/>
		<collection property="notaFiscalItens" column="id" select="NotaFiscalItensMap.fetchAllNotaFiscalItensByNota"/>
		<collection property="noteList" column="id" select="FrequencyEventMap.fetchFrequencyByNotaFiscalId"/>
		<collection property="contaspagarList" column="id" select="ContasPagarMap.fetchContasPagarByNota"/>
		<collection property="contasReceberList" column="id" select="ContasPagarMap.fetchContasPagarByNota"/>
		<collection property="itensEspeciais" column="id" select="ItensEspeciaisMap.fetchItensEspeciaisByNota"/>
		<collection property="nfStatusList" column="id" select="NFStatusMap.fetchAllNFStatussByNota"/>

  </resultMap>

  <!--
		SQL fragments allow "parts" of SQL to be re-used in other SQL statements.
	-->
  <sql id="allNotaFiscalColumns">
		 b.notaType
		,b.serie
		,b.ordem
		,b.numero
		,b.tipo
		,b.nfValor
		,b.xml
		,b.dataEmissao
		,b.dataSaida
		,b.dataEntrada
		,b.modelo
		,b.bxEstoque
		,b.descItens
		,b.pcCusto
		,b.pedidoCompraId
		,b.orcamentoId
		,b.cfop
		,b.transportador
		,b.conhecimentoTransporte
		,b.empresa
		,b.fornecedor
		,b.cliente
      	,b.create_date
      	,b.create_user
      	,b.modify_date
      	,b.modify_user
  </sql>

  <sql id="allNotaFiscalValues">
  		#{notaType},
		#{serie},
		#{ordem},
		#{numero},
		#{tipo},
		#{nfValor},
		#{xml},
		#{dataEmissao},
		#{dataSaida},
		#{dataEntrada},
		#{modelo},
		#{bxEstoque},
		#{descItens},
		#{pcCusto},
		#{pedidoCompraId},
		#{orcamentoId},
		#{cfop.id},
		#{transportador.id},
		#{conhecimentoTransporte.id},
		#{empresa.id},
		#{fornecedor.id},
		#{cliente.id},
    	<include refid="CBOFMap.changeControlFields"/>
  </sql>

  <!--
		SQL Insert Statements.
 	-->
  <insert id="insertNotaFiscal" parameterType="NotaFiscal" useGeneratedKeys="true" keyProperty="id">
  	INSERT INTO notaFiscal (
		<include refid="allNotaFiscalColumns" />
      )
    VALUES (<include refid="allNotaFiscalValues" /> )
  </insert>


	<!--
		SQL Update Statements.
 	-->

  <update id="updateNotaFiscal" parameterType="NotaFiscal">
    UPDATE notaFiscal
    	<set>
    		<if test="name != null"> name=#{name},</if>
	  		<if test="notaType!= null"> notaType!==#{notaType!=},</if>
			<if test="serie != null"> serie=#{serie},</if>
			<if test="ordem != null"> ordem=#{ordem},</if>
			<if test="numero != null"> numero=#{numero},</if>
			<if test="tipo != null"> tipo=#{tipo},</if>
			<if test="nfValor != null"> nfValor=#{nfValor},</if>
			<if test="xml != null"> xml=#{xml},</if>
			<if test="dataEmissao != null"> dataEmissao=#{dataEmissao},</if>
			<if test="dataSaida != null"> dataSaida=#{dataSaida},</if>
			<if test="dataEntrada != null"> dataEntrada=#{dataEntrada},</if>
			<if test="modelo != null"> modelo=#{modelo},</if>
			<if test="bxEstoque != null"> bxEstoque=#{bxEstoque},</if>
			<if test="descItens != null"> descItens=#{descItens},</if>
			<if test="pcCusto != null"> pcCusto=#{pcCusto},</if>
			<if test="pedidoCompraId != null"> pedidoCompraId=#{pedidoCompraId},</if>
			<if test="orcamentoId != null"> orcamentoId=#{orcamentoId},</if>
			<if test="cfop.id != null"> cfop=#{cfop.id},</if>
			<if test="transportador.id != null"> transportador=#{transportador.id},</if>
			<if test="conhecimentoTransporte.id != null"> conhecimentoTransporte=#{conhecimentoTransporte.id},</if>
			<if test="empresa.id != null"> empresa=#{empresa.id},</if>
			<if test="fornecedor.id != null"> fornecedor=#{fornecedor.id},</if>
			<if test="cliente.id != null"> cliente=#{cliente.id},</if>
			<if test="modifyDateUTC!= null"> modify_date=#{modifyDateUTC},</if>
			<if test="modifyUser!= null"> modify_user=#{modifyUser}</if>
		</set>
    WHERE
     id = #{id}
  </update>

   <!--
		SQL Delete Statements.
   -->
  <delete id="deleteNotaFiscalById" parameterType="Integer">
    	DELETE FROM notaFiscal WHERE notaFiscal_id = #{id}
  </delete>

	<!--
		SQL Fetch Statements.
 	-->
  <select id="fetchNotaFiscalRowCount" parameterType="PagedInquiryRequest" resultType="Integer">
     SELECT COUNT(id) AS RECORD_COUNT
        FROM notaFiscal
     WHERE 2 = 2
     <if test="empresa != null">
		  AND empresa = #{empresa.id}
	 </if>
  </select>

  <select id="fetchAllNotaFiscals" resultMap="notaFiscalResult">
    SELECT
	<include refid="allNotaFiscalColumns" />
    FROM notaFiscal ORDER BY id ASC
  </select>

  <select id="fetchNotaFiscalById" parameterType="FetchByIdRequest" resultMap="notaFiscalResult">

  </select>

  <select id="fetchAllNotaFiscalsByRequest" parameterType="PagedInquiryRequest" resultMap="notaFiscalResult">

  </select>



</mapper>
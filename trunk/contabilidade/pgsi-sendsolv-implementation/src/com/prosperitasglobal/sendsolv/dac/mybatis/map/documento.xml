<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="DocumentoMap">

	<!-- <cache type="org.mybatis.caches.ehcache.LoggingEhcache"/>
	<cache type="org.mybatis.caches.ehcache.EhcacheCache"/>  -->

  	<!-- Result maps describe the mapping between the columns returned
       from a query, and the class properties.  A result map isn't
       necessary if the columns (or aliases) match to the properties
       exactly. -->

  <resultMap id="documentoResult" type="Documento">
    <result property="id" column="id" />
    <result property="tabelaEnumValue" column="tabela" />
   	<result property="parentId" column="parentId"/>
	<result property="typeValue" column="type"/>
	<result property="description" column="description" />
    <result property="numero" column="numero" />
   	<result property="data" column="data"/>
	<result property="createUser" column="create_user"/>
	<result property="createDateUTC" column="create_date"/>
	<result property="modifyUser" column="modify_user"/>
	<result property="modifyDateUTC" column="modify_date"/>
	<association property="estado"    column="estado" select="EstadoMap.fetchEstadoById"  />
	<collection property="statusList" column="id" select="StatusMap.fetchAllStatusByDocumento"/>
  </resultMap>

  <!--
		SQL fragments allow "parts" of SQL to be re-used in other SQL statements.
	-->
  <sql id="allDocumentoColumns">
		 b.id
		,b.tabela
		,b.parentId
		,b.type
		,b.description
		,b.numero
		,b.data
		,b.estado
      	,b.create_date
      	,b.create_user
      	,b.modify_date
      	,b.modify_user
  </sql>

  <sql id="allDocumentoValues">
  		#{id},
  		#{tabelaEnumValue},
    	#{parentId},
    	#{typeValue},
    	#{description},
    	#{numero},
    	#{data},
    	#{estado},
    	<include refid="CBOFMap.changeControlFields"/>
  </sql>

  <!--
		SQL Insert Statements.
 	-->
  <insert id="insertDocumento" parameterType="Documento" useGeneratedKeys="true" keyProperty="id">
  	INSERT INTO documento (
		<include refid="allDocumentoColumns" />
      )
    VALUES (<include refid="allDocumentoValues" /> )
  </insert>


	<!--
		SQL Update Statements.
 	-->

  <update id="updateDocumento" parameterType="Documento">
    UPDATE documento
    	<set>
    		<if test="numero!= null">numero = #{numero},</if>
	    	<if test="typeEnumValue!= null"> type=#{typeEnumValue},</if>
	    	<if test="data!= null"> data=#{data},</if>
	    	<if test="estado!= null"> estado=#{estado},</if>
			<if test="modifyDateUTC!= null"> modify_date=#{modifyDateUTC},</if>
			<if test="modifyUser!= null"> modify_user=#{modifyUser}</if>
		</set>
    WHERE
     id = #{id}
  </update>

   <!--
		SQL Delete Statements.
   -->
  <delete id="deleteDocumentoById" parameterType="Integer">
    	DELETE FROM documento WHERE id = #{id}
  </delete>

	<!--
		SQL Fetch Statements.
 	-->
  <select id="fetchDocumentoByEmpresa" parameterType="Integer" resultMap="documentoResult">
     SELECT
     <include refid="allDocumentoColumns" />
        FROM documento b
     WHERE b.tabela = 1 and b.parentId = #{id}

  </select>

   <select id="fetchDocumentoByFuncionario" parameterType="Integer" resultMap="documentoResult">
     SELECT
     <include refid="allDocumentoColumns" />
        FROM documento b
     WHERE b.tabela = 16 and b.parentId = #{id}

  </select>

     <select id="fetchDocumentoByPessoaId" parameterType="Integer" resultMap="documentoResult">
     SELECT
     <include refid="allDocumentoColumns" />
        FROM documento b
     WHERE b.tabela = 23 and b.parentId = #{id}

  </select>

  <select id="fetchAllDocumentos" resultMap="documentoResult">
    SELECT
	<include refid="allDocumentoColumns" />
    FROM documento ORDER BY name ASC
  </select>

</mapper>
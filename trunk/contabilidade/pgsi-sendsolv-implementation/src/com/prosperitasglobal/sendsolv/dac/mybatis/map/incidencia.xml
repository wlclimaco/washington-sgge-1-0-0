<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="IncidenciaMap">

	<!-- <cache type="org.mybatis.caches.ehcache.LoggingEhcache"/>
	<cache type="org.mybatis.caches.ehcache.EhcacheCache"/>  -->

  	<!-- Result maps describe the mapping between the columns returned
       from a query, and the class properties.  A result map isn't
       necessary if the columns (or aliases) match to the properties
       exactly. -->

  <resultMap id="incidenciaResult" type="Incidencia" >
    <result property="id" column="id" />
    <result property="codigo" column="codigo" />
     <result property="texto" column="texto" />
	<result property="createUser" column="create_user"/>
	<result property="createDateUTC" column="create_date"/>
	<result property="modifyUser" column="modify_user"/>
	<result property="modifyDateUTC" column="modify_date"/>
  </resultMap>

  <!--
		SQL fragments allow "parts" of SQL to be re-used in other SQL statements.
	-->
  <sql id="allIncidenciaColumns">
		 b.codigo
		,b.texto
      	,b.create_date
      	,b.create_user
      	,b.modify_date
      	,b.modify_user
  </sql>

  <sql id="allIncidenciaValues">
  		#{codigo},
  		#{texto},
    	<include refid="CBOFMap.changeControlFields"/>
  </sql>

  <!--
		SQL Insert Statements.
 	-->
  <insert id="insertIncidencia" parameterType="Incidencia" useGeneratedKeys="true" keyProperty="id">
  	INSERT INTO incidencia (
		<include refid="allIncidenciaColumns" />
      )
    VALUES (<include refid="allIncidenciaValues" /> )
  </insert>


	<!--
		SQL Update Statements.
 	-->

  <update id="updateIncidencia" parameterType="Incidencia">
    UPDATE incidencia
    	<set>
    		<if test="codigo!= null">codigo = #{codigo},</if>
	    	<if test="texto!= null">texto=#{texto},</if>
			<if test="modifyDateUTC!= null"> modify_date=#{modifyDateUTC},</if>
			<if test="modifyUser!= null"> modify_user=#{modifyUser}</if>
		</set>
    WHERE
     id = #{id}
  </update>

   <!--
		SQL Delete Statements.
   -->
  <delete id="deleteIncidenciaById" parameterType="Integer">
    	DELETE FROM incidencia WHERE id = #{id}
  </delete>

	<!--
		SQL Fetch Statements.
 	-->
  <select id="fetchIncidenciaRowCount" parameterType="PagedInquiryRequest" resultType="Integer">
     SELECT COUNT(id) AS RECORD_COUNT
        FROM incidencia
     WHERE 1 = 1
     <if test="id != null">
		  AND id = #{id}
	 </if>
  </select>

  <select id="fetchAllIncidencias" resultMap="incidenciaResult">
    SELECT
	<include refid="allIncidenciaColumns" />
    FROM incidencia ORDER BY id ASC
  </select>

  <select id="fetchIncidenciaById" parameterType="FetchByIdRequest" resultMap="incidenciaResult">
	SELECT b.id,
	<include refid="allIncidenciaColumns" />
    FROM incidencia b
    where id = #{id}
    ORDER BY id ASC
  </select>

  <select id="fetchAllIncidenciasByRequest" parameterType="PagedInquiryRequest" resultMap="incidenciaResult">
	 SELECT b.id,<include refid="allIncidenciaColumns" />
        FROM incidencia b
     WHERE 1 = 1
     <if test="id != null">
		  AND b.id = #{id}
	 </if>
  </select>

  <select id="fetchIncidenciaByProduto" parameterType="Integer" resultMap="incidenciaResult">
	  	SELECT F.*

		  FROM incidenciaProd AS C

		  INNER JOIN incidencia AS F

		    ON F.id like C.incidenciaId
		where  c.prodId = #{id}
  </select>

    <select id="fetchById" parameterType="Integer" resultMap="incidenciaResult">
	  	SELECT * from incidencia

		where  id = #{id}
  </select>


</mapper>
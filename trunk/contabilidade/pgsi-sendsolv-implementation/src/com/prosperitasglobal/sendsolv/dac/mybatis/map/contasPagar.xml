<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ContasPagarMap">

	<!-- <cache type="org.mybatis.caches.ehcache.LoggingEhcache"/>
	<cache type="org.mybatis.caches.ehcache.EhcacheCache"/>  -->

  	<!-- Result maps describe the mapping between the columns returned
       from a query, and the class properties.  A result map isn't
       necessary if the columns (or aliases) match to the properties
       exactly. -->

  <resultMap id="contasPagarResult" type="ContasPagar">
    <result property="id" column="id" />
    <result property="idFornecedor" column="idFornecedor" />
    <result property="parentId" column="parentId" />
    <result property="emprId" column="idFornecedor" />
   	<result property="contaTypeEnum" column="contaTypeEnum"/>
	<result property="numeroParc" column="numeroParc"/>
    <result property="parcela" column="id" />
    <result property="valorOriginal" column="valorOriginal" />
   	<result property="dataVencimento" column="dataVencimento"/>
	<result property="dataGeracao" column="dataGeracao"/>
	<result property="dataPagamento" column="dataPagamento" />
   	<result property="juros" column="juros"/>
	<result property="taxa" column="taxa"/>
	<result property="valorTotal" column="valorTotal"/>
	<result property="baixaUser" column="baixauser"/>
	<result property="baixaDateUTC" column="baixa_date"/>
	<result property="createUser" column="create_user"/>
	<result property="createDateUTC" column="create_date"/>
	<result property="modifyUser" column="modify_user"/>
	<result property="modifyDateUTC" column="modify_date"/>
  </resultMap>

  <!--
		SQL fragments allow "parts" of SQL to be re-used in other SQL statements.
	-->
  <sql id="allContasPagarColumns">
		 b.idFornecedor
		,b.emprId
		,b.parentId
		,b.contaTypeEnum
      	,b.numeroParc
      	,b.parcela
      	,b.valorOriginal
      	,b.dataVencimento
      	,b.dataGeracao
      	,b.dataPagamento
      	,b.juros
      	,b.taxa
      	,b.valorTotal
      	,b.baixaUser
      	,b.baixaDateUTC
      	,b.create_date
      	,b.create_user
      	,b.modify_date
      	,b.modify_user
  </sql>

  <sql id="allContasPagarValues">
  		#{idFornecedor},
  		#{contaTypeEnum},
  		#{emprId},
  		#{parentId},
    	#{numeroParc},
    	#{parcela},
    	#{valorOriginal},
    	#{dataVencimento},
    	#{dataGeracao},
    	#{dataPagamento},
    	#{juros},
    	#{taxa},
    	#{valorTotal},
    	#{baixaUser},
    	#{baixaDateUTC},
    	<include refid="CBOFMap.changeControlFields"/>
  </sql>

  <!--
		SQL Insert Statements.
 	-->
  <insert id="insertContasPagar" parameterType="ContasPagar" useGeneratedKeys="true" keyProperty="id">
  	INSERT INTO contasPagarReceber (
		<include refid="allContasPagarColumns" />
      )
    VALUES (<include refid="allContasPagarValues" /> )
  </insert>


	<!--
		SQL Update Statements.
 	-->

  <update id="updateContasPagar" parameterType="ContasPagar">
    UPDATE contasPagarReceber
    	<set>
    		<if test="idFornecedor != null">idFornecedor = #{idFornecedor},</if>
	    	<if test="contaTypeEnumValue != null"> contaTypeEnum=#{contaTypeEnumValue},</if>
	    	<if test="numeroParc != null"> numeroParc=#{numeroParc},</if>
	    	<if test="parcela != null"> parcela=#{parcela},</if>
	    	<if test="valorOriginal != null"> valorOriginal = #{valorOriginal},</if>
	    	<if test="dataVencimento != null"> dataVencimento = #{dataVencimento},</if>
	    	<if test="dataGeracao != null"> dataGeracao=#{dataGeracao},</if>
	    	<if test="dataPagamento!= null"> dataPagamento=#{dataPagamento},</if>
	    	<if test="juros != null"> juros= #{juros},</if>
	    	<if test="taxa!= null"> taxa=#{taxa},</if>
	    	<if test="valorTotal!= null"> valorTotal=#{valorTotal},</if>
	    	<if test="baixaUser!= null"> baixaUser=#{baixaUser},</if>
	    	<if test="baixaDateUTC!= null"> baixaDateUTC=#{baixaDateUTC},</if>
			<if test="modifyDateUTC!= null"> modify_date=#{modifyDateUTC},</if>
			<if test="modifyUser!= null"> modify_user=#{modifyUser}</if>
		</set>
    WHERE
     contasPagar_id = #{id}
  </update>

   <!--
		SQL Delete Statements.
   -->
  <delete id="deleteContasPagarById" parameterType="Integer">
    	DELETE FROM contasPagarReceber WHERE id = #{id}
  </delete>

	<!--
		SQL Fetch Statements.
 	-->
  <select id="fetchContasPagarRowCount" parameterType="PagedInquiryRequest" resultType="Integer">
     SELECT COUNT(contasPagar_id) AS RECORD_COUNT
        FROM contasPagarReceber
     WHERE 2 = 2
     <if test="emprId != null">
		  AND emprId = #{emprId}
	 </if>
  </select>

  <select id="fetchAllContasPagars" resultMap="contasPagarResult">
    SELECT
	<include refid="allContasPagarColumns" />
    FROM contasPagarReceber ORDER BY name ASC
  </select>

  <select id="fetchContasPagarByNota" parameterType="Integer" resultMap="contasPagarResult">
		select *from contasPagarReceber where parentId = #{id}
  </select>

  <select id="fetchAllContasPagarsByRequest" parameterType="PagedInquiryRequest" resultMap="contasPagarResult">

  </select>

  <select id="fetchVersionNumber" parameterType="ContasPagar" resultType="int">
	SELECT versn_lock_num FROM contasPagarReceber WHERE contasPagar_id = #{id}
  </select>


</mapper>
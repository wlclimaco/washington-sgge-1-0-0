<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="TributosMap">

	<!-- <cache type="org.mybatis.caches.ehcache.LoggingEhcache"/>
	<cache type="org.mybatis.caches.ehcache.EhcacheCache"/>  -->

  	<!-- Result maps describe the mapping between the columns returned
       from a query, and the class properties.  A result map isn't
       necessary if the columns (or aliases) match to the properties
       exactly. -->

  <resultMap id="tributosResult" type="Tributos" >
    <result property="id" column="id" />
    <result property="prodId" column="prodId" />
    <result property="cstId" column="cstId" />
    <result property="icms" column="icms" />
    <result property="st" column="st" />
    <result property="mva" column="mva" />
    <result property="csosnId" column="csosnId" />
    <result property="ipi" column="ipi" />
    <result property="iat" column="iat" />
    <result property="ippt" column="ippt" />
    <result property="incidencia" column="incidencia" />
	<result property="createUser" column="create_user"/>
	<result property="createDateUTC" column="create_date"/>
	<result property="modifyUser" column="modify_user"/>
	<result property="modifyDateUTC" column="modify_date"/>
  </resultMap>

  <!--
		SQL fragments allow "parts" of SQL to be re-used in other SQL statements.
	-->
  <sql id="allTributosColumns">
		 b.prodId
		,b.cstId
		,b.icms
		,b.st
		,b.mva
		,b.csosnId
		,b.ipi
		,b.iat
		,b.ippt
		,b.incidencia
      	,b.create_date
      	,b.create_user
      	,b.modify_date
      	,b.modify_user
  </sql>

  <sql id="allTributosValues">
  		 #{prodId}
		,#{cstId}
		,#{icms}
		,#{st}
		,#{mva}
		,#{csosnId}
		,#{ipi}
		,#{iat}
		,#{ippt}
		,#{incidencia}
    	<include refid="CBOFMap.changeControlFields"/>
  </sql>

  <!--
		SQL Insert Statements.
 	-->
  <insert id="insertTributos" parameterType="Tributos" useGeneratedKeys="true" keyProperty="id">
  	INSERT INTO tributos (
		<include refid="allTributosColumns" />
      )
    VALUES (<include refid="allTributosValues" /> )
  </insert>


	<!--
		SQL Update Statements.
 	-->

  <update id="updateTributos" parameterType="Tributos">
    UPDATE tributos
    	<set>
    		<if test="codigo!= null">codigo = #{codigo},</if>
	    	<if test="texto!= null">texto=#{texto},</if>
			<if test="modifyDateUTC!= null"> modify_date=#{modifyDateUTC},</if>
			<if test="modifyUser!= null"> modify_user=#{modifyUser}</if>
		</set>
    WHERE
     id = #{id}
  </update>

   <!--
		SQL Delete Statements.
   -->
  <delete id="deleteTributosById" parameterType="Integer">
    	DELETE FROM tributos WHERE id = #{id}
  </delete>

	<!--
		SQL Fetch Statements.
 	-->
  <select id="fetchTributosRowCount" parameterType="PagedInquiryRequest" resultType="Integer">
     SELECT COUNT(id) AS RECORD_COUNT
        FROM tributos
     WHERE 1 = 1
     <if test="id != null">
		  AND id = #{id}
	 </if>
  </select>

  <select id="fetchAllTributoss" resultMap="tributosResult">
    SELECT
	<include refid="allTributosColumns" />
    FROM tributos ORDER BY id ASC
  </select>

  <select id="fetchTributosById" parameterType="FetchByIdRequest" resultMap="tributosResult">
	SELECT b.id,
	<include refid="allTributosColumns" />
    FROM tributos b
    where id = #{id}
    ORDER BY id ASC
  </select>

  <select id="fetchAllTributossByRequest" parameterType="PagedInquiryRequest" resultMap="tributosResult">
	 SELECT b.id,<include refid="allTributosColumns" />
        FROM tributos b
     WHERE 1 = 1
     <if test="id != null">
		  AND b.id = #{id}
	 </if>
  </select>

  <select id="fetchTributosByProduto" parameterType="Integer" resultMap="tributosResult">
	  	SELECT F.*

		  FROM tributosProd AS C

		  INNER JOIN tributos AS F

		    ON F.id like C.tributosId
		where  c.prodId = #{id}
  </select>


</mapper>
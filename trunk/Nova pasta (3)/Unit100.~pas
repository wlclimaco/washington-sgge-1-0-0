procedure TFrmCadMovD.Excluir1Click(Sender: TObject);
begin
if MessageDlg('DESEJA REALMENTE EXCLUIR VENDA ', mtConfirmation, [mbYes, mbNo], 0) = mrYes then
    begin
    IBQuery12.Active := False;
